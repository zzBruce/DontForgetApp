<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.cumt.bruce.dontforget.MainActivity"
    android:orientation="vertical"
    >

    <android.support.v4.view.ViewPager
        android:id="@+id/activity_main_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        />

    <LinearLayout
        android:id="@+id/activity_main_linearlayout_bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        >
        <LinearLayout
            android:id="@+id/activity_main_linearlayout_bottom_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <Button
                android:id="@+id/activity_main_linearlayout_bottom_1_button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="@string/activity_main_linearlayout_bottom_1_button_string"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/activity_main_linearlayout_bottom_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            >
            <Button
                android:id="@+id/activity_main_linearlayout_bottom_2_button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="@string/activity_main_linearlayout_bottom_2_button_string"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/activity_main_linearlayout_bottom_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            >
            <Button
                android:id="@+id/activity_main_linearlayout_bottom_3_button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="@string/activity_main_linearlayout_bottom_3_button_string"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
